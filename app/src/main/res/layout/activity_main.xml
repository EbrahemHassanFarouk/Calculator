<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linetextveiw"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textviewHello"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLines="1"
            android:text="hello you in my calculator ðŸ˜Š	"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineedittext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/textedit"
            style="@android:style/Holo.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:maxLines="30"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:textSize="35sp"

            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="35sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--line 1*****************************************************************-->
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@id/line2"

            >

            <Button
                android:id="@+id/btnMod"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" % "
                android:textColor="@color/operatorTextColor"
                android:textSize="35sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnCE"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" () "
                android:textColor="@color/operatorTextColor"
                android:textSize="35sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowColor="@color/teal_200"
                android:text=" C "
                android:textColor="@color/operatorTextColor"
                android:textSize="35sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/operatorTextColor"
                android:drawableBottom="@android:drawable/ic_input_delete"
                android:padding="20dp"
                app:cornerRadius="100dp"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>
        <!--line 2********************************************************************-->
        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@id/line3">

            <Button
                android:id="@+id/btn1ONX"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" X^Y "
                android:textColor="@color/operatorTextColor"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnXpower2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" X^2 "
                android:textColor="@color/operatorTextColor"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnsqrt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text="&#8730;( "
                android:textColor="@color/operatorTextColor"
                android:textSize="35sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnDIV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" / "
                android:textColor="@color/operatorTextColor"
                android:textSize="35sp"
                app:cornerRadius="100dp" />


        </LinearLayout>
        <!--line 3****************************************************-->
        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@id/line4">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" 7 "
                android:textSize="30sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" 8 "
                android:textSize="30sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" 9 "
                android:textSize="30sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnMUL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" * "
                android:textColor="@color/operatorTextColor"
                android:textSize="35sp"
                app:cornerRadius="100dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@id/line5">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" 4 "
                android:textSize="30sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" 5 "
                android:textSize="30sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" 6 "
                android:textSize="30sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnSUB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" - "
                android:textColor="@color/operatorTextColor"
                android:textSize="45sp"
                app:cornerRadius="100dp" />


        </LinearLayout>
        <!--    line 5 *********************************************************-->
        <LinearLayout
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@id/line6">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" 1 "
                android:textSize="30sp"
                app:cornerRadius="100dp"

                />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:shadowDx="@integer/material_motion_duration_medium_1"
                android:text=" 2 "
                android:textSize="30sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" 3 "
                android:textSize="30sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnplus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" + "
                android:textColor="@color/operatorTextColor"
                android:textSize="35sp"
                app:cornerRadius="100dp" />


        </LinearLayout>

        <!--    line 6************************************************************-->
        <LinearLayout
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btnPLUSORSUB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" +/_ "
                android:textColor="@color/operatorTextColor"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" 0 "
                android:textSize="30sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnDOT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" . "
                android:textSize="45sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnEQ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=" = "
                android:textColor="@color/operatorTextColor"
                android:textSize="35sp"
                app:cornerRadius="100dp" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>